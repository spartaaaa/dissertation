import time
import sqlite3
import pika
import os
import psutil

def get_cpu_usage(process_id):
    try:
        process = psutil.Process(process_id)
        cpu_usage = process.cpu_percent(interval=1.0)
        return cpu_usage
    except psutil.NoSuchProcess:
        return None

def create_table(cursor):
    cursor.execute('''CREATE TABLE IF NOT EXISTS send_data (
                        time TIMESTAMP DEFAULT (STRFTIME('%Y-%m-%d %H:%M:%f', 'NOW')),
                        size INTEGER,
                        cpu_usage FLOAT
                    )''')

def insert_data(cursor, size):
    cpu_usage = get_cpu_usage(process_id)
    cursor.execute("INSERT INTO send_data (size, cpu_usage) VALUES (?, ?)", (size, cpu_usage))

def publish(channel):
    try:
        conn = sqlite3.connect('amqpp.db')
        cursor = conn.cursor()

        create_table(cursor)

        msg_count = 1
        while True:
            time.sleep(1)
            msg = f"{msg_count}"
            size = len(msg)

            channel.basic_publish(exchange='', routing_key='hello', body=msg)

            print(f"Sending {size} to queue `hello`")
            insert_data(cursor, size)
            msg_count *= 10000000
    except KeyboardInterrupt:
        print("Publishing stopped by user")
    finally:
        conn.commit()
        conn.close()

def run():
    process_id = os.getpid()
    print("Process ID:", process_id)
    credentials = pika.PlainCredentials('qwerty', 'qwerty')

    connection = pika.BlockingConnection(pika.ConnectionParameters(host='broker.local', credentials=credentials))
    channel = connection.channel()
    channel.queue_declare(queue='hello')

    publish(channel)
    connection.close()

if __name__ == '__main__':
    run()
